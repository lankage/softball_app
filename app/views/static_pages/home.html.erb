<% if logged_in? %>
<% @user ||= current_user %>
  <div class="row" >
    <aside class="col-md-8">
        <div id="homeBanner" >
      <%= image_tag("WKbaseball_mods_blue_noapostrophe_banner.png", :alt => "Wisco Kids") %>
    </div>
    <section>
      <h1>
        <%= @user.name %><br /><br />
        <%= user_icon_for @user %>
      </h1>
    </section>
    
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <br /><br />

    <div id="gameDiv" >
      <% @game = Game.where("date >= ?", Date.today).where(:forteam => @user.team).order("date ASC").limit(1).take %>
      <% if !@game.nil? %>
        <%= render 'shared/team' %>
      <% else %>
        No Games Found
      <% end %>
    </div>
    </aside>

    <div class="col-md-4 postColumn postScrollFrame">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    <section class="micropost_form postForm">
        <%= render 'shared/micropost_form' %>
      </section>
    </div>
</div>
  
<% else %>
  <div class="center jumbotron">
    <%= image_tag("WKbaseball_mods_blue_noapostrophe.png", :alt => "Wisco Kids") %>

    <h2>
      This is the home page for the Wisco Kids Softball Slaughterers
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

<% end %>